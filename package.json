{
  "name": "bookme",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel mongodb dev:api dev:web",
    "dev:api": "npm run dev --prefix api",
    "dev:web": "npm run dev --prefix web",
    "lint": "eslint --cache .",
    "lint:fix": "npm run lint --fix",
    "pretest": "npm run lint",
    "test": "jest",
    "mongodb": "run-rs -k -v 4.2.0",
    "postinstall": "npm install --prefix api && npm install --prefix web"
  },
  "engines": {
    "node": "10.x"
  },
  "repository": "https://github.com/olistic/bookme.git",
  "author": "Mat√≠as Olivera <moliverafreire@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-environment-node": "^24.9.0",
    "lint-staged": "^9.4.2",
    "mongodb-memory-server": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "1.18.2",
    "run-rs": "^0.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
